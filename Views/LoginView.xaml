<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:AppPractica.Models"
             xmlns:vm:"clr-namespace:AppPractica.ViewModels"
             x:Class="AppPractica.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="LoginView">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            Text="Login View"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
        <Label Text="Usuario" />
        <Entry
            x:Name="usernameEntry"
            Placeholder="Ingrese su usuario"
            Text="{Binding Login.Usuario}"/>
        <Label Text="Contraseña" />
        <Entry
            x:Name="passwordEntry"
            IsPassword="True"
            Placeholder="Ingrese su contraseña"
            Text="{Binding Login.Contrasena}"/>
        <Button Text="Iniciar Sesion"
                HorizontalOptions="Center"
                Command="{Binding CargarHomeCommand}" />

    </VerticalStackLayout>
</ContentPage>