<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:AppPractica.Models"
             xmlns:vm="clr-namespace:AppPractica.ViewModels"
             x:Class="AppPractica.Views.HomeView"
             x:DataType="vm:HomeViewModel"
             Title="HomeView">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label x:Name="lblHome"
               Text="Home View"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <Button x:Name="btnVerDetalle"
                Text="Ver detalle"
                Clicked="btnVerDetalle_Clicked"/>
        <Button x:Name="btnVerEntregas"
                Text="Ver entregas"
                Command="{Binding VerEntregasCommand}"
                CommandParameter="{Binding Source={x:Reference lblHome}, Path=Text}"/>

    </VerticalStackLayout>
</ContentPage>